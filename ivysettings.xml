<ivysettings>
   <settings defaultResolver="default-chain" />
   <resolvers>
      <chain name="default-chain">
         <filesystem name="internal">
            <artifact pattern="${ivy.default.ivy.user.dir}/[module]/[artifact]-[revision].[ext]" />
         </filesystem>
         <ibiblio name="maven2" m2compatible="true" />
      </chain>
   </resolvers>
   <modules>
      <module organisation="org.flexunit" name=".*" />
   </modules>
</ivysettings>